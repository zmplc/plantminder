<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_map"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.zmplc.plantminder.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_plantListFragment"
            app:destination="@id/plantListFragment" />
        <action
            android:id="@+id/action_homeFragment_to_plantDetailFragment"
            app:destination="@id/plantDetailFragment" />
        <action
            android:id="@+id/action_homeFragment_to_gardenPlantDetailFragment"
            app:destination="@id/gardenPlantDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/annaffiatureFragment"
        android:name="com.zmplc.plantminder.AnnaffiatureFragment"
        tools:layout="@layout/fragment_annaffiature">
        <action
            android:id="@+id/action_annaffiatureFragment_to_gardenPlantDetailFragment"
            app:destination="@id/gardenPlantDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/gardenPlantDetailFragment"
        android:name="com.zmplc.plantminder.GardenPlantDetailFragment"
        tools:layout="@layout/fragment_garden_plant_detail">

        <argument
            android:name="gardenPlant"
            app:argType="com.zmplc.plantminder.GardenPlant" />
        <action
            android:id="@+id/action_gardenPlantDetailFragment_to_annaffiatureFragment"
            app:destination="@id/annaffiatureFragment" />
    </fragment>


    <fragment
        android:id="@+id/plantListFragment"
        android:name="com.zmplc.plantminder.PlantListFragment"
        android:label="PlantListFragment"
        tools:layout="@layout/fragment_plant_list">

        <action
            android:id="@+id/action_PlantListFragment_to_PlantDetailFragment"
            app:destination="@id/plantDetailFragment" />
        <action
            android:id="@+id/action_plantListFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_plantListFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/plantDetailFragment"
        android:name="com.zmplc.plantminder.PlantDetailFragment"
        android:label="Dettaglio Pianta"
        tools:layout="@layout/fragment_plant_detail" >

        <argument
            android:name="plant"
            app:argType="com.zmplc.plantminder.Plant" />
        <action
            android:id="@+id/action_plantDetailFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_plantDetailFragment_to_plantListFragment"
            app:destination="@id/plantListFragment" />
        <action
            android:id="@+id/action_plantDetailFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.zmplc.plantminder.ProfileFragment"
        android:label="Profilo"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_profileFragment_to_plantListFragment"
            app:destination="@id/plantListFragment" />
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.zmplc.plantminder.SettingsFragment"
        android:label="Impostazioni"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/action_settingsFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_plantListFragment"
            app:destination="@id/plantListFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>

</navigation>
