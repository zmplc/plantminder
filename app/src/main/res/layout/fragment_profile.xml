<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="?android:colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Titolo -->
        <TextView
            android:id="@+id/profileTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Il tuo profilo"
            android:gravity="center_horizontal"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingBottom="12dp" />

        <!-- Nome -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:textStyle="bold"
            android:textColor="?android:textColorPrimary" />

        <TextView
            android:id="@+id/textNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome Cognome"
            android:paddingBottom="16dp" />

        <!-- Email -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textStyle="bold"
            android:textColor="?android:textColorPrimary" />

        <TextView
            android:id="@+id/textEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="utente@mail.com"
            android:paddingBottom="16dp" />

        <!-- Numero piante -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Piante salvate nel giardino"
            android:textStyle="bold"
            android:textColor="?android:textColorPrimary" />

        <TextView
            android:id="@+id/textNumeroPiante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1"
            android:paddingBottom="32dp" />

        <!-- Cambia password -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCambioPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Cambia password"
            app:icon="?attr/cambiopassword"
            app:iconGravity="textStart"
            app:cornerRadius="10dp"
            android:textColor="@android:color/white"/>

        <!-- Logout -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Logout"
            app:icon="?attr/logout"
            app:iconGravity="textStart"
            app:cornerRadius="10dp"
            android:textColor="@android:color/white"/>

        <!-- Elimina account -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEliminaAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Elimina account"
            app:icon="?attr/elimina"
            app:iconGravity="textStart"
            app:cornerRadius="10dp"
            android:backgroundTint="?attr/colorError"
            android:textColor="@android:color/white"/>

    </LinearLayout>
</ScrollView>
