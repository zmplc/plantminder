<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topBarLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/annaffiaturaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Annaffiatura"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- ScrollView -->
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintTop_toBottomOf="@id/topBarLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btnAnnaffiata"
            android:layout_marginTop="8dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Nome pianta -->
                <TextView
                    android:id="@+id/nomePiantaTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nome Pianta"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>

                <!-- Stato annaffiatura -->
                <LinearLayout
                    android:id="@+id/statoLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <View
                        android:id="@+id/statoAnnaffiatura"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/status_circle" />

                    <TextView
                        android:id="@+id/statoAnnaffiaturaTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stato annaffiatura"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/prossimaAnnaffiaturaTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prossima annaffiatura: -"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textSize="16sp"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </ScrollView>

        <!-- Bottone pianta annaffiata -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAnnaffiata"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Segna come annaffiata"
            android:layout_marginTop="16dp"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_check_circle_white"
            app:iconGravity="textStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/azioniLayout" />

        <!-- Layout bottoni rinomina ed elimina -->
        <LinearLayout
            android:id="@+id/azioniLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:weightSum="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRinomina"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rinomina"
                app:icon="?attr/modifica"
                app:iconGravity="textStart"
                app:cornerRadius="16dp"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnElimina"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Elimina"
                app:icon="?attr/elimina"
                app:iconGravity="textStart"
                app:cornerRadius="16dp"
                android:backgroundTint="?attr/colorError"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
